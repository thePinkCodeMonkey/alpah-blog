<h1>Edit article <%= @article.id %></h1>
<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
    <div>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
    </div>
    <%= f.submit %>
<% end %>
<p><%= link_to("Show Article", article_path(@article)) %></p>
<p><%= link_to("Back to list of article", articles_path) %></p>